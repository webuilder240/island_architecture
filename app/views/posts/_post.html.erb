<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <my-reaction></my-reaction>

  <reactive-input>
    <label>
      <input type="text" value="<%= post.body %>" autofocus autocomplete="off">
    </label>
    <div></div>
  </reactive-input>
</div>
