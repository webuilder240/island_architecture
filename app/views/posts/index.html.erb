<!-- 最初にサーバーサイドでレンダリングされる部分 -->
<% @posts.each do |post| %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
  </div>
<% end %>

<div id="onboarding-container"></div>

